Trigger=xwhile
Title=Loop One-line
Snippet=#${1:expression} while ${2:condition};\r\n
[Item11]
Trigger=xfore
Title=Loop One-line
Snippet=#${1:expression} foreach @${2:array};\r\n
[Item12]
Trigger=class
Title=Package
Snippet=#package ${1:ClassName};\n\n${2:use base qw:ParentClass};\n\n}sub new {\n\tmy $class = shift;\n\t$class = ref $class if ref $class;\n\tmy $self = bless {}, $class;\n\t$self;\n}\n
[Item13]
Trigger=test
Title=Test
Snippet=##!/usr/bin/perl -w\r\n\r\nuse strict;\r\nuse Test::More tests => ${1:1};\r\nuse ${2:ModuleName};\r\n\r\nok(${3:assertion});\r\n
[Item14]
Trigger=eval
Title=Try/Except
Snippet=#eval {\n\t${1:# do something risky...}\n};\nif ($2) {\n\t${3:# handle failure...}\n}\n
[Item15]
Trigger=eval
Title=Try/Except
Snippet=#eval {\r\n\t${1:# do something risky...}\r\n};\r\nif (\\$@) {\r\n\t${2:# handle failure...}\r\n}\r\n
[Item16]
Trigger=while
Title=Loop
